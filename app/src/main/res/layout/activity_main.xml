<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/Blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BBIAnak"
            android:fontFamily="sans-serif-smallcaps"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="30px"
            android:layout_marginLeft="55px"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berat Badan Ideal Anak Usia 0 - 5 Tahun"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="36sp"
            android:layout_marginTop="70dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="500px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Anak"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="470px"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:layout_marginTop="530px"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="500px"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/textViewUsia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usia:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="10px" />

        <EditText
            android:id="@+id/editTextTahun"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Tahun"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="10px"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="105dp"
            android:text="Tahun"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editTextBulan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Bulan"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="190dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="290dp"
            android:text="Bulan"
            android:textSize="20sp"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/hitungButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="330dp"
            android:onClick="onHitungButtonClick"
            android:backgroundTint="@color/Blue"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Hasil"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="400dp"

            android:layout_marginLeft="20dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>